<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<ImageView
		android:id="@+id/videoCover"
		android:layout_width="75dp"
		android:layout_height="75dp"
		android:src="@drawable/icon_register_user_icon"
		android:scaleType="fitXY"/>

	<TextView
		android:id="@+id/videoDuration"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/white"
		tools:text="00:00"
		android:textSize="12sp"
		android:layout_alignEnd="@id/videoCover"
		android:layout_alignBottom="@id/videoCover"
		android:background="#69000000"
		android:gravity="end|center_vertical"/>

	<TextView
		android:id="@+id/videoIndexText"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:background="#80000000"
		android:textColor="@color/white"
		android:gravity="center"
		android:layout_alignTop="@id/videoCover"
		android:layout_alignStart="@id/videoCover"/>
</RelativeLayout>